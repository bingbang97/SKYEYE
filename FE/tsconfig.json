{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@constant/*": ["src/constant/*"],
      "@action/*": ["src/action/*"],
      "@present/*": ["src/present/*"],
      "@common/*": ["src/present/common/*"],
      "@component/*": ["src/present/component/*"],
      "@layout/*": ["src/present/layout/*"],
      "@pages/*": ["src/present/pages/*"],
      "@store/*": ["src/store/*"],
      "@public/*": ["src/public/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
