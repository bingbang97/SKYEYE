{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@/assets/*": ["./assets/*"],
      "@/constant/*": ["./constant/*"],
      "@/action/*": ["./action/*"],
      "@/present/*": ["./present/*"],
      "@/common/*": ["./present/common/*"],
      "@/component/*": ["./present/component/*"],
      "@/layout/*": ["./present/layout/*"],
      "@/pages/*": ["./present/pages/*"],
      "@/store/*": ["./store/*"],
      "@/public/*": ["./public/*"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
